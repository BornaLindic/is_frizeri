doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Dodaj proizvod
        link(rel="stylesheet" href="../styles/style.css")
        
    body
        a(href="/products" class="event-link") Nazad

        form(id="productForm")
            div(class="container")
                h1 Dodavanje proizvoda
                p Ispunite podatke o novom proizvodu

                hr

                <b>Novi proizvod</b>
                    select(name="id_kategorija" id="id_kategorija")
                        option(value=0) Njega
                        option(value=1) Styling
                        option(value=2) Oprema

                    label(for="Ime") <b>Ime proizvoda</b>
                    input(type="text" placeholder="Upišite ime proizvoda" name="ime" id="ime" required)

                    label(for="Opis") <b>Opis proizvoda</b>
                    input(type="text" placeholder="Upišite opis proizvoda" name="opis" id="opis" required)

                    label(for="Cijena") <b>Cijena proizvoda</b>
                    input(type="text" placeholder="Upišite cijena proizvoda" name="cijena" id="cijena" required)

                    label(for="Slika") <b>Slika proizvoda</b>
                    input(type="file" name="slika_ime" id="slika_ime" accept="image/*")

                    button(type="submit") Dodaj 
        script(src="../scripts/addNewProduct.js") 

                
            